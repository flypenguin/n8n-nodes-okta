{
    "name": "n8n-nodes-oktaeventsink",
    "version": "0.1.0",
    "description": "An Okta event sink (webhook type).",
    "license": "SEE LICENSE IN LICENSE.md",
    "homepage": "https://flypenguin.de",
    "author": {
        "name": "Axel Bock",
        "email": "mr.axel.bock@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/flypenguin/n8n-nodes-oktaeventsink.git"
    },
    "main": "index.js",
    "scripts": {
        "dev": "npm run watch",
        "build": "tsc && gulp",
        "tslint": "tslint -p tsconfig.json -c tslint.json",
        "watch": "tsc --watch",
        "test": "jest"
    },
    "files": [
        "dist"
    ],
    "n8n": {
        "credentials": [
            "dist/credentials/ExampleCredentials.credentials.js",
            "dist/credentials/OktaApiToken.credentials.js"
        ],
        "nodes": [
            "dist/nodes/Okta/OktaEventTrigger.node.js",
            "dist/nodes/Okta/OktaLogTrigger.node.js",
            "dist/nodes/ExampleNode/ExampleNode.node.js"
        ]
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/jest": "^24.0.18",
        "@types/node": "^10.10.1",
        "@types/request-promise-native": "^1.0.17",
        "gulp": "^4.0.0",
        "jest": "^24.9.0",
        "n8n-workflow": "^0.48.0",
        "ts-jest": "^24.0.2",
        "tslint": "^5.17.0",
        "typescript": "~3.5.2"
    },
    "dependencies": {
        "n8n-core": "^0.59.0"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testURL": "http://localhost/",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ]
    }
}
